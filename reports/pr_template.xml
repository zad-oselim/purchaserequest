<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="test_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <div class="row">
                            <div class="col-xs-6 oe_structure">
                                <h2>Purchase Request</h2>
                            </div>
                            <div class="col-xs-6 text-right">
                                <p>
                                    from
                                    <span t-field="doc.start_date"/>
                                    to
                                    <span t-field="doc.end_date"/>
                                </p>
                                <span t-field="doc.total_price"/>

                            </div>
                        </div>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Description</th>
                                    <th>Quantity</th>
                                    <th>Cost Price</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.order_lines_ids" t-as="line">
                                    <td>
                                        <span t-field="line.product_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="line.description"/>
                                    </td>
                                    <td>
                                        <span t-field="line.quantity"/>
                                    </td>
                                    <td>
                                        <span t-field="line.cost_price"/>
                                    </td>
                                    <td>
                                        <span t-field="line.price"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-xs-6">
                                <h4>Additional Information:</h4>
                                <p>
                                    <strong>Status:</strong>
                                    <span t-field="doc.state"/>
                                </p>
                                <p>
                                    <strong>Rejection Reason:</strong>
                                    <span t-if="doc.state=='reject'" t-field="doc.rejection_reason"/>

                                </p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
